{
  "rewrites": [
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/mechanic",
      "destination": "/mechanics",
      "permanent": true
    },
    {
      "source": "/dashboard/(.*)",
      "destination": "/login",
      "permanent": false
    },
    {
      "source": "/chat/(.*)",
      "destination": "/login", 
      "permanent": false
    },
    {
      "source": "/sitemap",
      "destination": "/sitemap.xml",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, s-maxage=3600"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        }
      ]
    }
  ]
}